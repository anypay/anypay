{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es6", "ES2015", "ES2016", "ES2017"
    ],
    "strict": true,
    "allowJs": true,
    "module": "commonjs",
    "outDir": "dist",
		"sourceMap": true,
		"sourceRoot": ".",
    "noUnusedLocals": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "wallet"
  ]
}
